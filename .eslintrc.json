{
    "extends": [
        "standard",
        "prettier",
        "prettier/standard",
        "plugin:jest/recommended"
    ],
    "env": {
        "node": true
    },
    "plugins": ["prettier", "jest"],
    "rules": {
        "promise/catch-or-return": "error",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "tabWidth": 4,
                "trailingComma": "none"
            }
        ],
        "space-in-parens": [2, "never"],
        "curly": ["error", "multi"]
    }
}
